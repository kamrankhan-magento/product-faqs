	</div> 
 
	<?php if ( $topicsCollection->count() == 0 ) : ?>  
	    <div class="block-content">
		<p class="empty"><?php echo __('No Faqs find yet!') ?></p>
	    </div>
	<?php else : ?>
	    <div class="menu">
		<p><?php echo __('Click on the Faq\'s topic:') ?></p>
		<ul>
		 <?php 
                        $count = 1;
                        foreach ($topicsCollection as $_topic):
                            
                            if($count <= $block->getFaqsBlockNumberOfTopics()){
                     ?>
