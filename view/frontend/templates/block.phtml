                            <?php } $count++; endforeach; ?>
		 <li><a href="<?php echo $this->getMainPageUrl() ?>"><?php echo __('View all topics') ?></a></li>
	       </ul>         
	    </div>
	    
	<?php endif; ?>   

</div>
